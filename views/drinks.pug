extends layout
block content

    
    ul(class=" grid grid-cols-3 gap-10 ] bg-[#151c26]")
        each val in data
            li(class="  mt-5 mx-5 text-gray-300 ") 
                p(class=" text-2xl")= val.strDrink
                img(src=val.strDrinkThumb class="mt-5 border-transparent border rounded-lg shadow-xl shadow-black ")
                button(class="border-2 border-transparent mt-5 text-white rounded-lg px-3 bg-orange-400 py-1 shadow-md shadow-black hover:bg-[#D91656] transition-colors duration-500  ease-in-out") order Now 